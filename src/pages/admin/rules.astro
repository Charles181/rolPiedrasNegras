---
import AdminLayout from "../../layouts/AdminLayout.astro";
import { db, Post, User, eq } from "astro:db";

const rules = await db
    .select({
        id: Post.id,
        title: Post.title,
        author: User.name,
        published: Post.published,
        createdAt: Post.createdAt,
    })
    .from(Post)
    .innerJoin(User, eq(Post.authorId, User.id))
    .where(eq(Post.type, "rule"));
---

<AdminLayout>
    <div class="flex justify-between items-center mb-6">
        <h1 class="text-3xl font-bold">Rules Management</h1>
        <button
            class="bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-700"
            >Add Rule</button
        >
    </div>

    <div class="bg-white shadow rounded-lg overflow-hidden">
        <table class="min-w-full divide-y divide-gray-200">
            <thead class="bg-gray-50">
                <tr>
                    <th
                        class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider"
                        >Title</th
                    >
                    <th
                        class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider"
                        >Author</th
                    >
                    <th
                        class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider"
                        >Status</th
                    >
                    <th
                        class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider"
                        >Actions</th
                    >
                </tr>
            </thead>
            <tbody class="bg-white divide-y divide-gray-200">
                {
                    rules.map((rule) => (
                        <tr>
                            <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">
                                {rule.title}
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                                {rule.author}
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                                <span
                                    class={`px-2 inline-flex text-xs leading-5 font-semibold rounded-full ${rule.published ? "bg-green-100 text-green-800" : "bg-yellow-100 text-yellow-800"}`}
                                >
                                    {rule.published ? "Published" : "Draft"}
                                </span>
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                                <a
                                    href="#"
                                    class="text-indigo-600 hover:text-indigo-900"
                                >
                                    Edit
                                </a>
                            </td>
                        </tr>
                    ))
                }
            </tbody>
        </table>
    </div>
</AdminLayout>
