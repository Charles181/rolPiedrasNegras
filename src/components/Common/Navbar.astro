---
const links = [
  { name: "Inicio", href: "/" },
  { name: "Campañas", href: "/campaigns" },
  { name: "Eventos", href: "/events" },
  { name: "Reglas", href: "/rules" },
];

import { db, CampaignParticipant, eq, and, count } from "astro:db";
const { user } = Astro.locals;

let inviteCount = 0;
if (user) {
    const result = await db.select({ value: count() })
        .from(CampaignParticipant)
        .where(and(eq(CampaignParticipant.userId, user.id), eq(CampaignParticipant.status, 'invited')));
    inviteCount = result[0]?.value || 0;
}
---

<nav
  class="bg-slate-900/90 backdrop-blur-md border-b border-white/10 sticky top-0 z-50"
>
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex items-center justify-between h-20">
      <div class="flex items-center gap-3">
        <a href="/" class="shrink-0">
          <img
            class="h-14 w-auto"
            src="/images/logo_pn.png"
            alt="Logo Comunidad Rolera"
          />
        </a>
        <span
          class="text-xl font-bold text-cyan-400 tracking-wider hidden sm:block font-serif"
          >Juegos de Rol Piedras Negras</span
        >
      </div>
      
      <!-- Desktop Menu -->
      <div class="hidden md:block">
        <div class="flex items-center space-x-4">
          {
            links.map((link) => (
              <a
                href={link.href}
                class="text-slate-300 hover:text-cyan-400 hover:bg-slate-800 px-3 py-2 rounded-md text-sm font-medium transition-colors"
              >
                {link.name}
              </a>
            ))
          }
          
          <div class="ml-4 border-l border-slate-700 pl-4">
            {user ? (
              <div class="relative group">
                <button class="flex items-center gap-2 text-slate-300 hover:text-white focus:outline-none relative" id="user-button">
                  {user.image ? (
                    <img src={user.image} alt={user.name} class="h-8 w-8 rounded-full object-cover ring-2 ring-cyan-500/50" />
                  ) : (
                    <div class="h-8 w-8 rounded-full bg-cyan-900 flex items-center justify-center ring-2 ring-cyan-500/50">
                      <span class="text-cyan-200 font-bold">{user.name.charAt(0).toUpperCase()}</span>
                    </div>
                  )}
                  {inviteCount > 0 && (
                      <span class="absolute -top-1 -right-1 flex h-4 w-4 items-center justify-center rounded-full bg-red-500 text-[10px] text-white">
                        {inviteCount}
                      </span>
                  )}
                  <span class="max-w-[100px] truncate">{user.name}</span>
                  <svg class="w-4 h-4 text-slate-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
                  </svg>
                </button>
                
                <!-- Dropdown Menu -->
                <div id="user-dropdown" class="absolute right-0 mt-2 w-48 bg-slate-800 rounded-md shadow-lg py-1 ring-1 ring-black ring-opacity-5 focus:outline-none hidden group-hover:block hover:block">
                  <a href="/profile" class="block px-4 py-2 text-sm text-slate-300 hover:bg-slate-700 hover:text-white">Mi Perfil</a>
                  {(user.role === 'admin' || user.role === 'master') && (
                    <a href="/admin" class="block px-4 py-2 text-sm text-slate-300 hover:bg-slate-700 hover:text-white">Panel de Control</a>
                  )}
                  <button id="logout-btn-desktop" class="block w-full text-left px-4 py-2 text-sm text-red-400 hover:bg-slate-700 hover:text-red-300">
                    Cerrar Sesión
                  </button>
                </div>
              </div>
            ) : (
              <div class="flex items-center gap-2">
                <a
                  href="/login"
                  class="text-slate-300 hover:text-white px-3 py-2 rounded-md text-sm font-medium"
                >
                  Iniciar Sesión
                </a>
                <a
                  href="/register"
                  class="bg-cyan-600 hover:bg-cyan-700 text-white px-4 py-2 rounded-md text-sm font-medium transition-colors shadow-lg shadow-cyan-900/20"
                >
                  Registrarse
                </a>
              </div>
            )}
          </div>
        </div>
      </div>

      <!-- Mobile menu button -->
      <div class="flex md:hidden">
        <button
          type="button"
          id="mobile-menu-button"
          class="bg-slate-800 inline-flex items-center justify-center p-2 rounded-md text-slate-400 hover:text-white hover:bg-slate-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-offset-slate-800 focus:ring-white"
        >
          <span class="sr-only">Abrir menú</span>
          <svg
            class="block h-6 w-6"
            xmlns="http://www.w3.org/2000/svg"
            fill="none"
            viewBox="0 0 24 24"
            stroke="currentColor"
            aria-hidden="true"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M4 6h16M4 12h16M4 18h16"></path>
          </svg>
        </button>
      </div>
    </div>
  </div>

  <!-- Mobile Menu -->
  <div class="hidden md:hidden bg-slate-800" id="mobile-menu">
    <div class="px-2 pt-2 pb-3 space-y-1 sm:px-3">
      {
        links.map((link) => (
          <a
            href={link.href}
            class="text-slate-300 hover:text-cyan-400 hover:bg-slate-700 block px-3 py-2 rounded-md text-base font-medium"
          >
            {link.name}
          </a>
        ))
      }
      <div class="border-t border-slate-700 pt-4 mt-4">
        {user ? (
          <div class="space-y-1">
             <div class="flex items-center px-3 mb-3">
               <div class="flex-shrink-0">
                  {user.image ? (
                    <img class="h-10 w-10 rounded-full" src={user.image} alt="" />
                  ) : (
                    <div class="h-10 w-10 rounded-full bg-cyan-900 flex items-center justify-center">
                      <span class="text-cyan-200 font-bold">{user.name.charAt(0).toUpperCase()}</span>
                    </div>
                  )}
               </div>
               <div class="ml-3">
                 <div class="text-base font-medium leading-none text-white">{user.name}</div>
                 <div class="text-sm font-medium leading-none text-slate-400">{user.email}</div>
               </div>
             </div>
             <a href="/profile" class="block px-3 py-2 rounded-md text-base font-medium text-slate-300 hover:text-white hover:bg-slate-700">Mi Perfil</a>
             {(user.role === 'admin' || user.role === 'master') && (
               <a href="/admin" class="block px-3 py-2 rounded-md text-base font-medium text-slate-300 hover:text-white hover:bg-slate-700">Panel</a>
             )}
             <button id="logout-btn-mobile" class="block w-full text-left px-3 py-2 rounded-md text-base font-medium text-red-400 hover:text-red-300 hover:bg-slate-700">Cerrar Sesión</button>
          </div>
        ) : (
          <div class="space-y-2 px-3">
            <a href="/login" class="block text-center w-full px-4 py-2 border border-transparent text-sm font-medium rounded-md text-slate-200 bg-slate-700 hover:bg-slate-600">Iniciar Sesión</a>
            <a href="/register" class="block text-center w-full px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-cyan-600 hover:bg-cyan-700 shadow-lg">Registrarse</a>
          </div>
        )}
      </div>
    </div>
  </div>

  <script>
    const navbar = document.getElementById("mobile-menu");
    const menuBtn = document.getElementById("mobile-menu-button");
    const logoutDesktop = document.getElementById("logout-btn-desktop");
    const logoutMobile = document.getElementById("logout-btn-mobile");

    menuBtn?.addEventListener("click", () => {
      navbar?.classList.toggle("hidden");
    });

    // Logout handler
    const handeLogout = () => {
       const form = document.createElement("form");
       form.method = "POST";
       form.action = "/api/auth/logout";
       document.body.appendChild(form);
       form.submit();
    };

    logoutDesktop?.addEventListener("click", handeLogout);
    logoutMobile?.addEventListener("click", handeLogout);

    const userButton = document.getElementById("user-button");
    const userDropdown = document.getElementById("user-dropdown");

    userButton?.addEventListener("click", () => {
      userDropdown?.classList.toggle("hidden");
    });
  </script>
</nav>
